{% extends "base.html.twig" %}
{% block accueil %}

<li class="nav-item px-lg-4"><a
        class="nav-link text-uppercase text-expanded"
        href="{{ path('homepage') }}">retour à l'accueil</a></li>
{% endblock %}

{% block body %}
    <style>
        .page-section
        {
            display: flex;
            flex-direction: row;
        }
        textarea.form-control{
            height: 242px;
        }
        .btn-success{
            margin-bottom: 4%;
        }

    </style>
<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">

                <h2 class="section-heading mb-4">
                    <span class="section-heading-upper">Formulaire de réservation:</span>
                    <span class="section-heading-lower"></span>
                </h2>
                <p class="mb-0">

                    {{ form_start(form) }}
                    {{ form_row(form.name,{ 'label': 'Prénom:' })}}



                    {{ form_row(form.lastname,{ 'label': 'Nom :' }) }}


                    {{ form_row(form.mail,{ 'label': 'Votre Adresse e-mail:' }) }}


                    {{ form_row(form.message,{ 'label': 'Votre demande:' }) }}

                    <button class="btn btn-success"> Envoyer votre demande :</button>
                    {{ form_end(form) }}

                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.8739172815053!2d2.335455315403547!3d48.86061460850456!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e671d877937b0f%3A0xb975fcfa192f84d4!2sMus%C3%A9e+du+Louvre!5e0!3m2!1sfr!2sfr!4v1543027076798"  width="80%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</section>

{% endblock %}
